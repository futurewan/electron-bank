    "drizzle-orm": "^0.45.1",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.563.0",
    "openai": "^6.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.11"
